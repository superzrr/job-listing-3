<h1>
  <%= @job.title %>
</h1>

<%= simple_form_for [:admin, @job] do |f| %>
  <%= f.input :title %>
  <%= f.input :job_field %>
  <%= f.input :description %>
  <%= f.input :wage_lower_bound %>
  <%= f.input :wage_upper_bound %>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>
  <%= f.submit "更新" , :class => "btn btn-primary" %>
<% end %>
